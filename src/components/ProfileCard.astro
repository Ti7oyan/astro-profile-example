---
import IProfile from '../types/profile';
import { FaGithub, FaInstagram, FaLinkedinIn, FaGlobeAmericas } from 'react-icons/fa/index.js';

export interface Props {
  profile: IProfile
}

const {profile} = Astro.props as Props;
---

<article>
  <img src={profile.avatar} alt={`${profile.name}'s profile picture.'`} />
  <h1>{profile.name}</h1>
  <h2>{profile.role}</h2>
  <p>{profile.description}</p>
  <ul>
    <li data-social="instagram">
      <a
        href={profile.socials.instagram}
        target="_blank"
      >
        <FaInstagram />
      </a>
    </li>

    <li data-social="github">
      <a
        href={profile.socials.github}
        target="_blank"
      >
        <FaGithub />
      </a>
    </li>

    <li data-social="linkedin">
      <a
        href={profile.socials.linkedin}
        target="_blank"
      >
        <FaLinkedinIn />
      </a>
    </li>

    <li data-social="portfolio">
      <a href={profile.socials.portfolio}>
        <FaGlobeAmericas />
      </a>
    </li>
  </ul>
  <footer>
    <p>Built with <b>Astro</b> ðŸš€</p>
    <a href="https://astro.build" target="_blank">
      Learn more
    </a>
  </footer>
</article>

<style>
  :root {
    --light-blue: #38f;
  }
  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #161616;
    border-radius: 1em;
    box-shadow: 0 0 .5em var(--light-blue);
    padding: 2em;
  }

  img {
    align-self: center;
    width: 12em;
    height: 12em;
    border-radius: 9999px;
    object-fit: cover;
    margin-block-end: 1em;
  }

  h1 {
    font-size: 2.15em;
    color: var(--light-blue);
    margin: 0;
  }

  h2 {
    text-align: center;
    color: var(--light-blue);
    opacity: 50%;
    margin-block-start: .25em;
    font-size: 1.25em;
  }

  p {
    color: #eee;
    margin-block-start: .25em;
  }

  ul {
    min-width: 100%;
    margin-block-start: 0;
    padding-inline-start: 0;
    display: flex;
    justify-content: space-evenly;
    list-style-type: none;
  }

  li {
    border-radius: .5rem;
    padding: 1em;
    align-self: center;
  }
  
  a {
    width: 2em;
    height: 2em;
    font-size: 2em;
    color: #fff;
    transition: all .25s;
  }

  a:hover {
    color: var(--light-blue);
  }

  footer {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  footer > p, a {
    margin-block-start: 0;
    margin-block-end: 0;
    padding-block-start: 0;
    padding-block-end: 0;
  }

  footer > a {
    font-size: 1em;
    color: #ff8c49;
    width: max-content;
    height: max-content;
  }
</style>